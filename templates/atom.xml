{% extends "rss_feed.xml" %}

{% block content %}
  <link href="{{ site.url }}/atom.xml" rel="self" type="application/atom+xml" />
  <link href="{{ '/' | absolute_url }}" rel="alternate" type="text/html" />
  <id>{{ '/' | absolute_url | xml_escape }}</id>
  <title type="html">{{ site.title | xml_escape }}</title>
  <subtitle>{{ site.description | xml_escape }}</subtitle>

  {% set selected_articles = articles | sort(attribute="date", reverse=True) %}

  {% for post in selected_articles[:25] %}
    {% include "partials/rss_feed_entry.xml" %}
  {% endfor %}
{% endblock %}
